{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<div class="container d-flex justify-content-center align-items-center vh-100">
    <div class="card shadow-lg p-4 w-100" style="max-width: 400px;">
        {% if error %}
            <div class="alert alert-danger" data-aos="fade-down" data-aos-duration="800">
                {{ error.messageKey|trans(error.messageData, 'security') }}
            </div>
        {% endif %}

        {% if app.user %}
            <div class="alert alert-info" data-aos="fade-down" data-aos-duration="800">
                Vous êtes connecté en tant que {{ app.user.userIdentifier }}, 
                <a href="{{ path('app_logout') }}" class="fw-bold text-decoration-none">Déconnexion</a>
            </div>
        {% endif %}

        <h1 class="text-center mb-4" data-aos="fade-up" data-aos-duration="1000">Connexion</h1>

        <form method="post" data-aos="fade-up" data-aos-duration="1200">
            <div class="mb-3">
                <label for="username" class="form-label">Adresse email</label>
                <input type="email" value="{{ last_username }}" name="_username" id="username" 
                       class="form-control" autocomplete="email" required autofocus>
            </div>

            <div class="mb-3">
                <label for="password" class="form-label">Mot de passe</label>
                <input type="password" name="_password" id="password" class="form-control" 
                       autocomplete="current-password" required>
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <div class="d-grid">
                <button type="submit" class="btn btn-primary btn-lg">
                    Se connecter
                </button>
            </div>

            <div class="mt-3 text-center">
                <a href="/register" class="text-decoration-none text-secondary">
                    Pas encore inscrit ? <span class="fw-bold">Créez un compte</span>
                </a>
            </div>
        </form>
    </div>
</div>
{% endblock %}


